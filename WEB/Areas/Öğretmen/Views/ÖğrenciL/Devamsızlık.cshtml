@model DataAccess.Entity.Devamsızlık
@{
    ViewBag.Title = "Devamsızlık";
    Layout = "~/Areas/Öğretmen/Views/Shared/_LayoutPage1.cshtml";
}

<div class="col-md-6 mx-auto">
    <form method="post">
        <div class="mt-2">
            @Html.LabelFor(x => x.Nöbetçi)
            @Html.ValidationMessageFor(x => x.Nöbetçi)
            @Html.TextBoxFor(x => x.Nöbetçi, null, new { @class = "form-control" })

        </div>
        <div class="mt-2">
            @Html.LabelFor(x => x.Raporsuz)
            @Html.ValidationMessageFor(x => x.Raporsuz)
            @Html.TextBoxFor(x => x.Raporsuz, null, new { @class = "form-control" })

        </div>
        <div class="mt-2">
            @Html.LabelFor(x => x.Raprolu)
            @Html.ValidationMessageFor(x => x.Raprolu)
            @Html.TextBoxFor(x => x.Raprolu, null, new { @class = "form-control" })

        </div>

        <button class="btn btn-primary">Register</button>
    </form>
</div>

