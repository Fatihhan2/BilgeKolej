@model DataAccess.Entity.Önkayıt
@{
    ViewBag.Title = "ÖnKayıt";
}

<h2>ÖnKayıt</h2>

<h2>Deneme Kayıt Alanı</h2>
<div class="col-md-6 mx-auto">
    <form method="post">
        <div class="mt-2">
            @Html.LabelFor(x => x.Ad)
            @Html.ValidationMessageFor(x => x.Ad)
            @Html.TextBoxFor(x => x.Ad, null, new { @class = "form-control" })

        </div>
        <div class="mt-2">
            @Html.LabelFor(x => x.Soyad)
            @Html.ValidationMessageFor(x => x.Soyad)
            @Html.TextBoxFor(x => x.Soyad, null, new { @class = "form-control" })

        </div>
        <div class="mt-2">
            @Html.LabelFor(x => x.BitirdiğiOkul)
            @Html.ValidationMessageFor(x => x.BitirdiğiOkul)    
            @Html.TextBoxFor(x => x.BitirdiğiOkul, null, new { @class = "form-control" })

        </div>
        <div class="mt-2">
            @Html.LabelFor(x=>x.Cinsiyet)
            @Html.DropDownListFor(x => x.Cinsiyet, new List<SelectListItem>{new SelectListItem{
           Text="Kız",Value="0" },new SelectListItem{Text="Erkek",Value="1" } }, new { @class = "form-control" })

        </div>
        <div class="mt-2">
            @Html.LabelFor(x => x.EvAdresi)
            @Html.ValidationMessageFor(x => x.EvAdresi)
            @Html.TextBoxFor(x => x.EvAdresi, null, new { @class = "form-control" })

        </div>
        <div class="mt-2">
            @Html.LabelFor(x => x.EvTelefonu)
            @Html.ValidationMessageFor(x => x.EvTelefonu)
            @Html.TextBoxFor(x => x.EvTelefonu, null, new { @class = "form-control" })

        </div>
        <div class="mt-2">
            @Html.LabelFor(x => x.NotOrtalaması)
            @Html.ValidationMessageFor(x => x.NotOrtalaması)
            @Html.TextBoxFor(x => x.NotOrtalaması, null, new { @class = "form-control" })

        </div>
        <div class="mt-2">
            @Html.LabelFor(x => x.VeliAdSoyad)
            @Html.ValidationMessageFor(x => x.VeliAdSoyad)
            @Html.TextBoxFor(x => x.VeliAdSoyad, null, new { @class = "form-control" })

        </div>
        <div class="mt-2">
            @Html.LabelFor(x => x.İşTelefonu)
            @Html.ValidationMessageFor(x => x.İşTelefonu)
            @Html.TextBoxFor(x => x.İşTelefonu, null, new { @class = "form-control" })

        </div>
        <button class="btn btn-primary">Register</button>
    </form>
</div>